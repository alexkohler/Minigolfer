<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Divider_vertical">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_floating_material_dark</item> for divider color
    </style>

    <style name="Divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/background_floating_material_dark</item> for divider color
    </style>

    <style name="Divider_invisible">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- FAB style -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- GolfEntry style - used for inside each table entry where a user can enter golf scores. -->
    <style name="golfEntry">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">#000000</item>
        <item name="android:digits">0123456789.</item>
        <item name="android:ellipsize">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">"    "</item>
    </style>


