<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="GolfEntryStyle">@style/GolfEntry</item>
        <item name="NameEntryStyle">@style/NameEntry</item>
        <item name="DividerVerticalStyle">@style/Divider_vertical</item>
        <item name="TotalTextStyle">@style/TotalText</item>
    </style>

    <style name="Divider_vertical">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_floating_material_dark</item> for divider color
    </style>

    <style name="Divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/background_floating_material_dark</item> for divider color
    </style>

    <style name="Divider_invisible">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- FAB style -->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- GolfEntry style - used for inside each table entry where a user can enter golf scores. -->
    <style name="GolfEntry">
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@drawable/edit_text_border_two</item>
        <item name="android:digits">0123456789.</item>
        <item name="android:ellipsize">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">"    "</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:imeOptions">actionNext</item>
    </style>


    <!-- NameEntry style - used for each name entry in TitleTableRow -->
    <style name="NameEntry">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/name_entry_border</item>
        <item name="android:ellipsize">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HoleText">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_border_two</item>
    </style>

    <style name="TotalText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/edit_text_border_two</item>
    </style>


</resources>
